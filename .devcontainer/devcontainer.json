{
  "name": "sample-app-dev",
  "build": {
    "dockerfile": "../Dockerfile",
    "target": "dev"
  },
  "runArgs": [
    "--env-file",
    ".env",
    "-v",
    ".:/root/project"
  ],
  "forwardPorts": [8000],
  "postCreateCommand": "uv sync --only-group dev",
  "postStartCommand": "uv run uvicorn src.main:app --host 0.0.0.0 --port 8000 --reload",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
